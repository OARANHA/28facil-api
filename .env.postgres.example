# =====================================================

# Application
APP_NAME=28facil-api
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8080
APP_TIMEZONE=America/Sao_Paulo

# Database - PostgreSQL
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=28facil_api
DB_USERNAME=28facil
DB_PASSWORD=senha_forte_123_MUDAR_EM_PRODUCAO

# pgAdmin (opcional)
PGADMIN_EMAIL=admin@28facil.com.br
PGADMIN_PASSWORD=admin123_MUDAR_EM_PRODUCAO
PGADMIN_PORT=5050

# API
API_PORT=8080
API_KEY_PREFIX=28fc

# JWT
JWT_SECRET=seu_jwt_secret_super_secreto_aqui_MUDAR_EM_PRODUCAO
