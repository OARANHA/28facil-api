# =====================================================
# 28FACIL API - Configurações de Ambiente
# =====================================================

# Banco de Dados
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=28facil_api
DB_USERNAME=28facil
DB_PASSWORD=TROQUE_POR_UMA_SENHA_FORTE

# Aplicação
APP_ENV=production
APP_DEBUG=false
APP_URL=https://api.28facil.com.br

# JWT Secret (gerar com: openssl rand -base64 32)
JWT_SECRET=GERAR_UM_SECRET_SEGURO_AQUI

# Rate Limiting (opcional)
RATE_LIMIT_DEFAULT=1000
RATE_LIMIT_WINDOW=3600

# Logging
LOG_LEVEL=info
LOG_CHANNEL=stack
