# =====================================================
# Apache Rewrite Rules - 28Facil API
# =====================================================

<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Redirecionar /portal para /portal/ (com barra final)
    RewriteCond %{REQUEST_URI} ^/portal$
    RewriteRule ^(.*)$ $1/ [R=301,L]
    
    # Permitir acesso direto a arquivos e diretórios existentes
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]
    
    # Redirecionar todo o resto para index.php (apenas rotas da API)
    RewriteRule ^(.*)$ index.php [QSA,L]
</IfModule>

# Habilitar DirectoryIndex para subdiretórios
DirectoryIndex index.html index.php

# Segurança
<FilesMatch "\.(env|git|md|sql)$">
    Require all denied
</FilesMatch>

# CORS Headers
<IfModule mod_headers.c>
    Header set Access-Control-Allow-Origin "*"
    Header set Access-Control-Allow-Methods "GET, POST, OPTIONS, PUT, DELETE"
    Header set Access-Control-Allow-Headers "Content-Type, X-API-Key, Authorization"
</IfModule>
