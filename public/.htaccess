# =====================================================
# Apache Rewrite Rules - 28Facil API
# =====================================================

<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Redirecionar /portal para /portal/ (com barra final)
    RewriteCond %{REQUEST_URI} ^/portal$
    RewriteRule ^(.*)$ $1/ [R=301,L]
    
    # Permitir acesso direto a arquivos e diretórios existentes
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]
    
    # Redirecionar todo o resto para index.php (apenas rotas da API)
    RewriteRule ^(.*)$ index.php [QSA,L]
</IfModule>

# Habilitar DirectoryIndex para subdiretórios
DirectoryIndex index.html index.php

# Segurança
<FilesMatch "\.(env|git|md|sql)$">
    Require all denied
</FilesMatch>

# CORS Headers - Garantir que /api.json seja acessível
<IfModule mod_headers.c>
    # CORS para todas as rotas
    Header always set Access-Control-Allow-Origin "*"
    Header always set Access-Control-Allow-Methods "GET, POST, OPTIONS, PUT, DELETE"
    Header always set Access-Control-Allow-Headers "Content-Type, X-API-Key, Authorization, X-Requested-With"
    
    # Headers adicionais para preflight (OPTIONS)
    Header always set Access-Control-Max-Age "3600"
    
    # Permitir exposição de headers customizados
    Header always set Access-Control-Expose-Headers "X-API-Key, Authorization"
</IfModule>

# Responder OK para requisições OPTIONS (preflight)
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteCond %{REQUEST_METHOD} OPTIONS
    RewriteRule ^(.*)$ $1 [R=200,L]
</IfModule>
